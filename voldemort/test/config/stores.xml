<stores>
    <store>
        <name>ChannelStore</name>
        <persistence>memory</persistence>
        <routing>client</routing>
        <replication-factor>1</replication-factor>
        <required-reads>1</required-reads>
        <required-writes>1</required-writes>
        <hinted-handoff-strategy>consistent-handoff</hinted-handoff-strategy>
        <key-serializer>
            <type>string</type>
        </key-serializer>
        <value-serializer>
            <type>identity</type>
        </value-serializer>
    </store>
    <store>
        <name>dayStore</name>
        <persistence>memory</persistence>
        <routing>client</routing>
        <replication-factor>1</replication-factor>
        <required-reads>1</required-reads>
        <required-writes>1</required-writes>
        <hinted-handoff-strategy>consistent-handoff</hinted-handoff-strategy>
        <key-serializer>
            <type>string</type>
        </key-serializer>
        <value-serializer>
            <type>identity</type>
        </value-serializer>
        <retention-days>1</retention-days>
    </store>
</stores>
