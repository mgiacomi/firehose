<stores>
    <store>
        <name>BucketStorage</name>
        <persistence>memory</persistence>
        <routing>client</routing>
        <replication-factor>1</replication-factor>
        <required-reads>1</required-reads>
        <required-writes>1</required-writes>
        <hinted-handoff-strategy>consistent-handoff</hinted-handoff-strategy>
        <key-serializer>
            <type>json</type>
            <schema-info version="1">
                {
                "customer":"string",
                "bucket":"string"
                }
            </schema-info>
        </key-serializer>
        <value-serializer>
            <type>string</type>
        </value-serializer>
    </store>
    <store>
        <name>ShortTermPayloadStorage</name>
        <persistence>memory</persistence>
        <routing>client</routing>
        <replication-factor>1</replication-factor>
        <required-reads>1</required-reads>
        <required-writes>1</required-writes>
        <hinted-handoff-strategy>consistent-handoff</hinted-handoff-strategy>
        <key-serializer>
            <type>json</type>
            <schema-info version="1">
                {
                "customer":"string",
                "bucket":"string",
                "id":"string"
                }
            </schema-info>
        </key-serializer>
        <value-serializer>
            <type>identity</type>
        </value-serializer>
        <retention-days>14</retention-days>
    </store>

    <store>
        <name>MediumTermPayloadStorage</name>
        <persistence>memory</persistence>
        <routing>client</routing>
        <replication-factor>1</replication-factor>
        <required-reads>1</required-reads>
        <required-writes>1</required-writes>
        <hinted-handoff-strategy>consistent-handoff</hinted-handoff-strategy>
        <key-serializer>
            <type>json</type>
            <schema-info version="1">
                {
                "customer":"string",
                "bucket":"string",
                "id":"string"
                }
            </schema-info>
        </key-serializer>
        <value-serializer>
            <type>identity</type>
        </value-serializer>
        <retention-days>90</retention-days>
    </store>

    <store>
        <name>LargeTermPayloadStorage</name>
        <persistence>memory</persistence>
        <routing>client</routing>
        <replication-factor>1</replication-factor>
        <required-reads>1</required-reads>
        <required-writes>1</required-writes>
        <hinted-handoff-strategy>consistent-handoff</hinted-handoff-strategy>
        <key-serializer>
            <type>json</type>
            <schema-info version="1">
                {
                "customer":"string",
                "bucket":"string",
                "id":"string"
                }
            </schema-info>
        </key-serializer>
        <value-serializer>
            <type>identity</type>
        </value-serializer>
        <retention-days>366</retention-days>
    </store>


</stores>
